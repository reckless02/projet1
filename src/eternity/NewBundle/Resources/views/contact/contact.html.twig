{% extends "::layout.html.twig" %}

{% block title %}eternityNewBundle:contact:contact{% endblock %}

{% block body %}
<h1>Welcome to the contact:contact page</h1>

<form action="{{ path('eternityNewBundle_contact') }}" method="post" {{ form_enctype(form) }}>
 
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, { 'attr':{'placeholder': 'Email' }}) }}
 
    {{ form_errors(form.subject) }}
    {{ form_widget(form.subject, { 'attr':{'placeholder': 'Sujet' }}) }}
 
    {{ form_errors(form.content) }}
    {{ form_widget(form.content, { 'attr':{'placeholder': 'Contenu'}}) }}
 
    {{ form_rest(form) }}
 
    <input type="submit" value="Envoyez"/>
 
</form>
{% endblock %}